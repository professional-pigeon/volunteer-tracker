<div id="main-center">
  <h1>Organizer: Projects to Volunteers</h1>
</div>

<div class="row">
  <div class="col-md-8">
    <h2>Project List</h2>
    <% if @projects.any? %>
      <div class="row row-cols-3">
        <% @projects.each do |proj| %>
          <div class="col">
            <div class="card" id="proj-card">
              <div class="card-body">
                <h5 class="card-title"><a href="/project/<%= proj.id %>"><%= proj.title %></a></h5>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p>There are no projects available at this time.</p>
    <% end %>
  </div>
  <div class="col-md">
    <h2>Add a project<h2>
      <form action="/projects" method="post">
        <div class="form-group">
          <label for="project_title">Project Name</label>
          <input reqiured id="n" name="project_title" class="form-control" type="text">
        </div>
        <button type="submit"class="btn btn-primary">Create Project</button>
      </form>
  </div>
</div>